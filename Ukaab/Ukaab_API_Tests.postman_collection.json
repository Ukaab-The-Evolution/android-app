            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"driver.test@ukaab.com\",\n  \"password\": \"DriverPass123!\",\n  \"user_type\": \"driver\",\n  \"full_name\": \"Test Driver User\",\n  \"cnic\": \"12345-6789012-3\",\n  \"owns_company\": false\n}"
            },
            "url": {
              "raw": "{{authBaseUrl}}/signup",
              "host": ["{{authBaseUrl}}"],
              "path": ["signup"]
            }
          }
        },
        {
          "name": "Step 5: Verify Driver OTP (MANUAL)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.token || jsonData.data?.token) {",
                  "        const token = jsonData.token || jsonData.data.token;",
                  "        pm.collectionVariables.set('driverToken', token);",
                  "        console.log('Driver token saved after OTP verification:', token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
