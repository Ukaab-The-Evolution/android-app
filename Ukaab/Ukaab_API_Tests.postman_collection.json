              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": {{driverUserId}},\n  \"otp_code\": \"REPLACE_WITH_ACTUAL_OTP\"\n}"
            },
            "url": {
              "raw": "{{authBaseUrl}}/verify-otp",
              "host": ["{{authBaseUrl}}"],
              "path": ["verify-otp"]
            }
          }
        }
      ]
    },
